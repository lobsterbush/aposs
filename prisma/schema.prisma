// APOSS Database Schema
// Asian Politics Online Seminar Series

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Configure Prisma db seed to use our seed script
// This block is supported by Prisma to locate the seed command
// https://www.prisma.io/docs/guides/migrate/seed-database
// For Node ESM .mjs we can call `node prisma/seed.mjs`

// === ENUMS ===
enum SubmissionStatus {
  PENDING
  UNDER_REVIEW
  ACCEPTED
  SCHEDULED
  PRESENTED
  REJECTED
}

enum EventStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  CANCELLED
}

enum UserRole {
  ADMIN
  ORGANIZER
  VIEWER
}

// === MODELS ===
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(VIEWER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  events   Event[]
  accounts Account[]
  sessions Session[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Submission {
  id                    String           @id @default(cuid())
  title                 String
  abstract              String
  authorName            String
  authorEmail           String
  authorAffiliation     String
  authorBio             String?
  coAuthors             String?          // JSON string of co-authors

  // Research details
  researchField         String
  methodology           String?
  keywords              String           // Comma-separated keywords
  isPublished           Boolean          @default(false)
  presentationPreference String?         // e.g., preferred formats/timing
  availabilityNotes     String?

  // Submission metadata
  status                SubmissionStatus @default(PENDING)
  submittedAt           DateTime         @default(now())
  reviewedAt            DateTime?
  scheduledAt           DateTime?
  presentedAt           DateTime?

  // Admin notes
  adminNotes            String?
  reviewerComments      String?

  // Relations
  eventId               String?          @unique
  event                 Event?           @relation(fields: [eventId], references: [id])

  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  @@map("submissions")
}

model Event {
  id              String      @id @default(cuid())
  title           String
  description     String?
  
  // Scheduling
  scheduledAt     DateTime
  duration        Int         @default(90) // minutes
  timeZone        String      @default("Asia/Tokyo")
  
  // Zoom integration
  zoomMeetingId   String?
  zoomJoinUrl     String?
  zoomStartUrl    String?
  zoomPassword    String?
  
  // Event details
  presenter       String
  presenterEmail  String?
  moderator       String?
  status          EventStatus @default(SCHEDULED)
  
  // Relations
  submissionId    String?     @unique
  submission      Submission?
  organizerId     String?
  organizer       User?       @relation(fields: [organizerId], references: [id])
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@map("events")
}

model Settings {
  id                    String   @id @default(cuid())
  siteName              String   @default("APOSS")
  siteDescription       String   @default("Asian Politics Online Seminar Series")
  contactEmail          String   @default("contact@aposs.org")
  submissionsOpen       Boolean  @default(true)
  maxSubmissionsPerWeek Int      @default(1)
  
  // Zoom settings
  zoomApiKey            String?
  zoomApiSecret         String?
  zoomWebhookSecret     String?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@map("settings")
}
